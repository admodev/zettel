{{ define "base" }}
<!doctype html>
<html>
    {{- template "header" . }}
   <body>
      <div id="page-container">
         <div id="content-wrap">
         {{- template "navbar" . }}
            {{- if .IsIndex}}
            <section class="hero container">
               <h1>{{.SiteName}}</h1>
               <h5>{{.Description}}</h5>
            </section>
            {{- end}}
            {{- template "post" . }}
         </div>
         <div id="container"></div>
         {{- template "footer" . }}
      </div>
   </body>
   <script>
   sigma.parsers.json('data.json', {
      container: 'graphContainer',
      settings: {
         defaultNodeColor: '#ec5148'
      }
   });
   </script>
</html>
{{- end }}
